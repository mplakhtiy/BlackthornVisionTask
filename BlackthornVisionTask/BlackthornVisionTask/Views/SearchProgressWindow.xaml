<Window x:Class="BlackthornVisionTask.Views.SearchProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SearchProgressWindow" Height="100" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button Content="Cancel" Height="25" Width="75" Command="{Binding Cancel}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Label Content="Searching duplicated files, please wait . . . " FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>

